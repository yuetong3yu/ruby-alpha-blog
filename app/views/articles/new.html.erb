<h1>Creating Article</h1>

<%= form_with scope: :article, url: articles_path, local: true do |f| %>
<div>
  <p>
    <%= f.label :title %>
    <%= f.text_field :title %>
  </p>

  <p>
    <%= f.label :description %>
    <%= f.text_area :description %>
  </p>

  <p>
    <%= f.submit %>
  </p>
</div>
<% end %>