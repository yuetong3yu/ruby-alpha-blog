<%= form_with scope: :user, url: users_path, local: true do |f| %>
<div>
  <p>Hello</p>

  <p>
    <%= f.label :username %>
    <%= f.text_field :username %>
  </p>

  <p>
    <%= f.label :email %>
    <%= f.text_field :email %>
  </p>

  <p>
    <%= f.label :password %>
    <%= f.text_field :password %>
  </p>

  <p>
    <%= f.submit %>
  </p>
</div>
<% end %>